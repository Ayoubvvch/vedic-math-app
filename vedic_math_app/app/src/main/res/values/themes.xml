<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- موضوع WebToApp Builder - بدون شريط عنوان -->
    <style name="Theme.WebToApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- اللون الأساسي -->
        <item name="colorPrimary">@color/webtoapp_primary</item>
        <item name="colorPrimaryVariant">@color/webtoapp_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- اللون الثانوي -->
        <item name="colorSecondary">@color/webtoapp_secondary</item>
        <item name="colorSecondaryVariant">@color/webtoapp_secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- لون الخلفية -->
        <item name="android:windowBackground">@color/white</item>

        <!-- شريط الحالة -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- تمكين الحافة الممتدة للنظام -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

</resources>
